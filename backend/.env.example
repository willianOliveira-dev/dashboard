# Database connection settings
DB_HOST=localhost              # Database host (e.g., localhost for local machine)
DB_USER=your_username          # Database username
DB_PASS=your_password          # Database password
DB_NAME=db_name                # Name of the database

# JWT authentication secrets
JWT_ACCESS_SECRET=your_secure_access_secret         # Secret key for signing/verifying access tokens
JWT_REFRESH_SECRET=your_secure_refresh_secret       # Secret key for signing/verifying refresh tokens

# Token expiration settings
JWT_ACCESS_EXPIRE=1h30m         # Access token expiration (e.g., 30m, 2h, 1h30m)
JWT_REFRESH_EXPIRE=7d           # Refresh token expiration (e.g., 7d, 2w, 3mo)

# Server port
PORT=3000                       # Port number where the server will run (e.g., 3000, 8080)