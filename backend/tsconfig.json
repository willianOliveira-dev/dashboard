{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {},
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "database", "**/*.spec.ts", "**/__tests__/**"]
}
